# LGPD Compliance Dashboard - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/lgpd_database

# PostgreSQL Connection Details
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=lgpd_database

# AI Processing Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Application Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-for-sessions

# File Processing Configuration
DATA_DIRECTORY=data
MAX_FILE_SIZE_MB=50
SUPPORTED_LANGUAGES=por,eng

# OCR Configuration (Tesseract)
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANGUAGES=por+eng

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:5000,https://your-domain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/lgpd_compliance.log

# Performance Configuration
MAX_WORKERS=4
PROCESSING_TIMEOUT=300
BATCH_SIZE=100

# LGPD Compliance Configuration
PRIORITY_COMPANIES_ENABLED=True
AI_ESCALATION_ENABLED=True
CONFIDENCE_THRESHOLD=0.85
SENSITIVITY_THRESHOLD=0.8

# Email Notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_RECIPIENTS=compliance@company.com,security@company.com